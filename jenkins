pipeline {
    agent any

    tools{
        maven 'Maven3'
    }

    stages {
        stage('Compile') {
            steps {
                build job: 'compiling job'
            }
        }

        stage('Test') {
            steps {
                build job: 'testing'
            }
        }
        stage('Package') {
            steps {
                sh '''
                mvn -version 
                mvn clean package
                '''
            }
        }

        stage('Docker Build') {
            steps {
                sh '''
                docker build -t mahoro01/xyztechnologies:1.0 .
                '''
            }
        }
        stage('Deploy with Ansible') {
            steps {
                sh '''
                ansible-playbook -i ansible/deploy_docker.yml
                '''
    }
}
    }
    

    post {
        success {
            echo 'CI Pipeline completed successfully'
        }
        failure {
            echo 'CI Pipeline failed'
        }
    }
}
