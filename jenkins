pipeline {
    agent any

    stages {
        stage('Compile') {
            steps {
                build job: 'compiling job'
            }
        }

        stage('Test') {
            steps {
                build job: 'testing'
            }
        }

        stage('Package') {
            steps {
                build job: 'package job'
            }
        }
    }

    post {
        success {
            echo 'CI Pipeline completed successfully'
        }
        failure {
            echo 'CI Pipeline failed'
        }
    }
}
