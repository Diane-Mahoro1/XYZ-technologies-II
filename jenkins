pipeline {
    agent { label 'Node1'}

    tools{
        maven 'Maven3'
    }

    stages {
        stage('Compile') {
            steps {
                build job: 'compiling job'
            }
        }

        stage('Test') {
            steps {
                build job: 'testing'
            }
        }
        stage('Package') {
            steps {
                sh '''
                mvn -version 
                mvn clean package
                '''
            }
        }

        stage('Docker Build') {
            steps {
                sh '''
                docker build -t mahoro01/xyztechnologies:1.0 .
                '''
            }
        }
        stage('Docker Push') {
            steps {
                withDockerRegistry([credentialsId: 'dockerhub-credentials', url: 'https://index.docker.io/v1/']) {
                    sh 'docker push mahoro01/xyztechnologies:1.0'
                }
            }
        }

        stage('Deploy with Ansible') {
            steps {
                sh '''
                ansible-playbook ansible/deploy_docker.yml
                '''
            }
        }

    // stage('Deploy to Kubernetes') {
    //     steps {
    //         sh 'ansible-playbook ansible/deploy_k8s.yml'
    //     }
    // }
        stage('Deploy to Kubernetes') {
            steps {
                withCredentials([file(credentialsId: 'kubeconfig', variable: 'KUBECONFIG')]) {
                    sh '''
                    echo "Using kubeconfig at $KUBECONFIG"
                    ansible-playbook ansible/deploy_k8s.yml
                    '''
                }
            }
}

    }
    
    post {
        success {
            echo 'CI Pipeline completed successfully'
        }
        failure {
            echo 'CI Pipeline failed'
        }
    }
}
