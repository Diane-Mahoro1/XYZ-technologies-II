pipeline {
    agent any

    stages {
        stage('Compile') {
            steps {
                build job: 'compiling job'
            }
        }

        stage('Test') {
            steps {
                build job: 'testing'
            }
        }
        stage('Package') {
            steps {
                sh '''
                clean package
                '''
            }
        }

        stage('Docker Build') {
            steps {
                sh '''
                docker build -t mahoro01/xyztechnologies:1.0 .
                '''
            }
        }
    }

    post {
        success {
            echo 'CI Pipeline completed successfully'
        }
        failure {
            echo 'CI Pipeline failed'
        }
    }
}
